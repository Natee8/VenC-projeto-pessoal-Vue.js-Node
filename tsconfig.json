{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",         
    "moduleResolution": "NodeNext", 
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "apps/web/src/**/*.ts",
    "apps/service/src/**/*.ts",
    "packages/src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
